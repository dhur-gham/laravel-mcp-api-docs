{
    "name": "dhur-gham/laravel-mcp-api-docs",
    "description": "Laravel MCP API Documentation package",
    "license": "MIT",
    "authors": [
        {
            "name": "dhurgham",
            "email": "hello@dhurgham.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/contracts": "^11.0||^12.0",
        "laravel/mcp": "^0.6.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "DhurGham\\LaravelMcpApiDocs\\": "src/",
            "DhurGham\\LaravelMcpApiDocs\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DhurGham\\LaravelMcpApiDocs\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "format": "vendor/bin/pint",
        "test": "vendor/bin/pest"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "DhurGham\\LaravelMcpApiDocs\\LaravelMcpApiDocsServiceProvider"
            ],
            "aliases": {
                "LaravelMcpApiDocs": "DhurGham\\LaravelMcpApiDocs\\Facades\\LaravelMcpApiDocs"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
